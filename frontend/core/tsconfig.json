{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es2017",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"listEmittedFiles": true,
		"listFiles": false,
		"noEmitOnError": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": true,
		"outDir": "dist",
		"baseUrl": "."
		// "paths": {
		// 	"*": ["node_modules/*", "src/types/*"]
		// },
	},
	"include": ["src/**/*"],
	"sourceMap": false
	// "exclude": [".gitignore", ".npmignore", "core.code-workspace", "babel.config.js", "jest.config.js", "tsconfig.json"]
}
